apiVersion: v1
kind: Secret
metadata:
  name: sumo-k8-secrets
  namespace: sumo-k8
type: Opaque
stringData:
  # Database connection (required)
  DATABASE_URL: "postgresql://postgres:password@postgres-service:5432/sumo_k8"
  POSTGRES_PASSWORD: "password"
  # Admin key for protected endpoints (required in production)
  ADMIN_KEY: "your-secure-admin-key-here"
  # AWS credentials (optional, for S3 storage)
  # AWS_ACCESS_KEY_ID: "your-access-key"
  # AWS_SECRET_ACCESS_KEY: "your-secret-key"
---
# To create this secret via CLI:
#
# kubectl create secret generic sumo-k8-secrets \
#   --from-literal=DATABASE_URL="postgresql://postgres:yourpass@postgres-service:5432/sumo_k8" \
#   --from-literal=POSTGRES_PASSWORD="yourpass" \
#   --from-literal=ADMIN_KEY="your-secure-admin-key" \
#   -n sumo-k8
