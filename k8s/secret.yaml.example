apiVersion: v1
kind: Secret
metadata:
  name: sumo-k8-secrets
  namespace: sumo-k8
type: Opaque
stringData:
  DATABASE_URL: "postgresql://user:password@postgres-service:5432/sumo_k8"
---
# To create this secret:
# kubectl create secret generic sumo-k8-secrets \
#   --from-literal=DATABASE_URL="postgresql://user:pass@host:5432/sumo_k8" \
#   -n sumo-k8

