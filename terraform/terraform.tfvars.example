# Example Terraform variables file
# Copy to terraform.tfvars and fill in your values

aws_region = "eu-central-2"
cluster_name = "sumo-k8-cluster"
kubernetes_version = "1.33"

# Use existing VPC (recommended)
vpc_id = "vpc-023f6e8b7c4627c82"
vpc_cidr = "172.31.0.0/16"
public_subnet_ids = ["subnet-xxx", "subnet-yyy"]
private_subnet_ids = ["subnet-xxx", "subnet-yyy"]

# Or create new VPC (set vpc_id = null)
# vpc_id = null

# Infrastructure nodes
infrastructure_node_type = "t3.large"
infrastructure_min_size = 1
infrastructure_max_size = 3

# Simulation nodes (Karpenter)
simulation_instance_types = ["c5.4xlarge", "c7i.4xlarge", "c7i.8xlarge", "c5.9xlarge"]
simulation_max_cpu = "200"
simulation_max_memory = "1600Gi"

# Application
image_repository_name = "sumo-k8-controller"
image_tag = "latest"

# Database (null = deploy in-cluster PostgreSQL)
database_url = null
# Or use external: database_url = "postgresql://user:pass@host:5432/sumo_k8"

admin_key = "your-secure-admin-key-here"
s3_bucket_name = "transcality-simulations"

tags = {
  Environment = "production"
  Project     = "sumo-k8"
}

